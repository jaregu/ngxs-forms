{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "ngxs-forms": ["."]
    },
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "example-app"
  ]
}